<%- include('../partials/header.ejs') %> <%- include('../partials/nav_bar.ejs')
%>

<h2>Update drink review?</h2>

<form action="/drinks/<%= drink.id %>?_method=put" method="POST">
  <label>
    Name:
    <input
      type="text"
      name="name"
      id="nameInput"
      required="true"
      value="<%= drink.name  %>"
    />
  </label>
  <br />
  <label>
    Fizziness:
    <input
      type="number"
      name="fizziness"
      id="fizzinessLevel"
      min="0"
      max="10"
      value="<%= drink.fizziness  %>"
    />
  </label>
  <br />
  <label>
    Flavours:
    <input
      type="text"
      name="flavours"
      id="flavoursProfile"
      value="<%= drink.flavours  %>"
    />
  </label>
  <br />
  <label>
    Rating:
    <input
      type="number"
      name="rating"
      id="overallRating"
      min="0"
      max="10"
      value="<%= drink.rating  %>"
    />
  </label>
  <br />
  <label>
    Comments:
    <input
      type="text"
      name="ownerComments"
      id="ownerCommentsOnly"
      value="<%= drink.ownerComments  %>"
    />
  </label>
  <br />
  <% if( user != null && (drink.isOwner(user.id) ||
  drink.isCollaborator(user.id))){ %>
  <label>
    Collaborators:
    <input
      type="text"
      name="collaborators"
      id="listCollaborators"
      value="<%= drink.collaborators  %>"
    />
  </label>
  <% } %>
  <br />
  <button>Update review</button>
</form>

<%- include('../partials/footer') %>
