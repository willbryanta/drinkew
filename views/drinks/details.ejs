<%- include('../partials/header.ejs') %> <%- include('../partials/nav_bar.ejs')
%>

<h4>
  These are the details for the following reviewed drink: <%= drink.name %>
</h4>

<ul>
  <li><strong>Name:</strong> <%= drink.name %></li>
  <li><strong>Fizziness:</strong> <%= drink.fizziness %></li>
  <li><strong>Flavours:</strong> <%= drink.flavours %></li>
  <li><strong>Rating:</strong> <%= drink.rating %></li>
  <li><strong>Comments:</strong> <%= drink.ownerComments %></li>
</ul>

<p>
  <strong>Created by: </strong>
  <%= drink.owner.username %>
</p>

<% if( user != null && (drink.canBeEditedBy(user.id))){ %>
<br />
<a href="/drinks/<%= drink._id %>/edit">Edit this drink</a>
<br />
<% } %> <% if( user != null && drink.isOwner(user.id)){ %>
<form action="/drinks/<%= drink._id %>/?_method=delete" method="post">
  <button class="deleteBtn">Delete review</button>
</form>
<% } %><%- include('../partials/footer') %>
